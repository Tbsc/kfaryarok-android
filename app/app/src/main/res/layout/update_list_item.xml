<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/btn_updatecard_options"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_more_vert_black_24dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tv_updatecard_text"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_updatecard_options"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:text="@string/debug_string"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_updatecard_class"
            android:layout_width="120sp"
            android:layout_height="20sp"
            android:layout_alignBottom="@+id/btn_updatecard_options"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="@string/debug_string"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_updatecard_more"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/tv_updatecard_class"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_arrow_drop_down_black_24dp"
            android:visibility="invisible" />

    </RelativeLayout>
</android.support.v7.widget.CardView>